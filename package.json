{
  "name": "nexus-reussite-eaf",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "build:ci": "next build --webpack",
    "start": "next start",
    "lint": "eslint",
    "typecheck": "tsc --noEmit",
    "test": "npm run test:unit && npm run test:e2e",
    "test:unit": "vitest run",
    "test:e2e": "playwright test --config=playwright.config.ts",
    "test:all": "npm run test:unit && npm run mcp:test",
    "prisma:generate": "prisma generate",
    "prisma:migrate": "prisma migrate dev",
    "db:seed": "tsx scripts/seed.ts",
    "rag:index": "tsx scripts/index-rag.ts",
    "scheduler": "tsx src/lib/cron/scheduler.ts",
    "mcp:dev": "cd packages/mcp-server && tsx watch src/index.ts",
    "mcp:build": "cd packages/mcp-server && tsc",
    "mcp:start": "cd packages/mcp-server && node dist/index.js",
    "mcp:inspect": "cd packages/mcp-server && npx @modelcontextprotocol/inspector tsx src/index.ts",
    "mcp:test": "cd packages/mcp-server && vitest run",
    "mcp:init": "node -e \"const fs=require('fs');const envPath='packages/mcp-server/.env';if(!fs.existsSync(envPath)){fs.copyFileSync(envPath+'.example',envPath);console.log('packages/mcp-server/.env créé depuis .env.example');}const k=require('crypto').randomBytes(32).toString('hex');let e=fs.readFileSync(envPath,'utf8');e=e.replace(/MCP_API_KEY=.*/,'MCP_API_KEY='+k);fs.writeFileSync(envPath,e);console.log('MCP_API_KEY générée :',k);\"",
    "setup": "bash scripts/setup.sh",
    "ci:config-sanity": "node scripts/check-env.js"
  },
  "dependencies": {
    "@aws-sdk/client-s3": "^3.996.0",
    "@aws-sdk/s3-request-presigner": "^3.996.0",
    "@google/generative-ai": "^0.24.1",
    "@mistralai/mistralai": "^1.8.1",
    "@prisma/client": "^6.16.2",
    "@react-email/components": "^1.0.8",
    "@react-email/render": "^2.0.4",
    "@react-pdf/renderer": "^4.3.2",
    "bullmq": "^5.70.1",
    "clsx": "^2.1.1",
    "highlight.js": "^11.11.1",
    "ioredis": "^5.9.3",
    "lucide-react": "^0.575.0",
    "next": "16.1.6",
    "node-cron": "^4.2.1",
    "openai": "^6.22.0",
    "pino": "^10.3.1",
    "pino-pretty": "^13.1.3",
    "prisma": "^6.16.2",
    "react": "19.2.3",
    "react-dom": "19.2.3",
    "react-markdown": "^10.1.0",
    "recharts": "^3.7.0",
    "rehype-highlight": "^7.0.2",
    "resend": "^6.9.2",
    "tailwind-merge": "^3.5.0",
    "web-push": "^3.6.7",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@playwright/test": "^1.56.1",
    "@tailwindcss/postcss": "^4",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "@types/web-push": "^3.6.4",
    "@vitest/coverage-v8": "^4.0.18",
    "eslint": "^9",
    "eslint-config-next": "16.1.6",
    "tailwindcss": "^4",
    "tsx": "^4.21.0",
    "typescript": "^5",
    "vitest": "^4.0.0"
  }
}
